<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.LogindanQrCode"
        android:forceDarkAllowed="true"
        tools:targetApi="31">
        <activity
            android:name=".Screen.SplashScreen"
            android:exported="true"
            android:configChanges="uiMode">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".ViewModel.LoginViewModel"
            android:exported="true">
        </activity>
        <activity
            android:name=".View.LoginActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".ViewModel.ViewDataActivity"
            android:label="View Data Activity"
            android:parentActivityName=".View.LoginActivity">
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:parentActivityName=".ViewModel.ViewDataActivity">
        </activity>
        <activity android:name=".ViewModel.EditDataActivity"
            android:exported="false">
        </activity>
        <activity android:name=".ViewModel.AboutActivity"
            android:parentActivityName=".MainActivity"/>
    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ManifestOrder,ScopedStorage" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />


</manifest>